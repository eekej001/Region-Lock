<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });
  </script>
<% end %>

<h1>You shouldn't have come here, Brian...  Turn back.</h1>
<h2>First 10 Products</h2>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>
</br>
</br>

<ul>
  <% @users.each do |user| %>
    <li><%= user.first_name %> <%= user.last_name %></li>
  <% end %>
</ul>

<br>

<h2>Doujinshi Titles</h2>

<ul>
  <% @doujinshis.each do |doujinshi| %>
    <li><%= doujinshi.title %> - <%= doujinshi.handle %></li>
  <% end %>
</ul>


<div>
  <%= form_for(:form, :url => {:action => 'create'}) do |f| %>
  <table>
    <tr>
      <td><%= f.label(:firstname, "First Name") %></td>
      <td><%= f.text_field(:first_name) %></td>
    </tr>
    <tr>
      <td><%= f.label(:lastname, "Last Name") %></td>
      <td><%= f.text_field(:last_name) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Submit") %></td>
    </tr>
  </table>
  <% end %>
</div> 


<br>
<h1>Add a Doujinshi Title</h1>

<div>
  <%= form_for(:form, :url => {:action => 'd_create'}) do |f| %>
  <table>
    <tr>
      <td><%= f.label(:title, "Title") %></td>
      <td><%= f.text_field(:title) %></td>
    </tr>
    <tr>
      <td><%= f.label(:handle, "Product Handle") %></td>
      <td><%= f.text_field(:handle) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Submit") %></td>
    </tr>
  </table>
  <% end %> 
</div>